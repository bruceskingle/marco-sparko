    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in library 'marco-sparko'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--lib",
                    "--package=marco-sparko"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in 'tests::test_handle_bill_total'",
            "cargo": {
                "args": [
                    "test",
                    "octopus::tests::test_handle_bill_total",
                    "--no-run",
                    "--lib",
                    "--package=marco-sparko"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'marco-sparko bill'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marco-sparko",
                    "--package=marco-sparko"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "bin"
                }
            },
            "args": [
                "--modules=octopus",
                "bill"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'marco-sparko summary'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marco-sparko",
                    "--package=marco-sparko"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "bin"
                }
            },
            "args": [
                "--modules=octopus",
                "summary"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'marco-sparko test'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marco-sparko",
                    "--package=marco-sparko"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "bin"
                }
            },
            "args": [
                "--modules=octopus",
                "test"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug cli",
            "cargo": {
                "args": [
                    "build",
                    "--bin",
                    "cli"
                ],
                "filter": {
                    "name": "cli",
                    "kind": "bin"
                }
            },
            "args": [
                "--debug"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug Pre-built app",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/target/debug/marco-sparko",
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "RUST_BACKTRACE": "1"
            }
        },

        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug Dioxus Desktop App",
            "cargo": {
                "args": [
                    "build",
                    "--bin=marco-sparko",
                    "--package=marco-sparko",
                    "--features=dioxus/desktop"
                ],
                "filter": {
                    "name": "marco-sparko",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "CARGO_MANIFEST_DIR": "${workspaceFolder}",
                "RUST_BACKTRACE": "1"
